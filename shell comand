//important delete buffer/cache memory which cause slow beahve

# To free pagecache:
#         echo 1 > /proc/sys/vm/drop_caches
# To free dentries and inodes:
#         echo 2 > /proc/sys/vm/drop_caches
# To free pagecache, dentries and inodes:
#         echo 3 > /proc/sys/vm/drop_caches
sudo sync && sudo sysctl -w vm.drop_caches=3

sudo -s ; echo 1 > /proc/sys/vm/drop_caches ;echo 2 > /proc/sys/vm/drop_caches ;echo 3 > /proc/sys/vm/drop_caches ; sudo sync && sudo sysctl -w vm.drop_caches=3

